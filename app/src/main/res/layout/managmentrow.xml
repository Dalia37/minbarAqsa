<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/managment_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/img_managment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/managment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="خالد عبد العزيز"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/managment_img"
            app:layout_constraintTop_toTopOf="@+id/managment_img" />

        <TextView
            android:id="@+id/managment_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="مهمة إدارية"
            android:textColor="#CE8B2B"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/managment_name"
            app:layout_constraintTop_toBottomOf="@+id/managment_name" />


        <TextView
            android:id="@+id/managment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="104dp"
            android:drawableEnd="@drawable/ic_managment"
            android:text="   05/01/2020   "
            android:textColor="#8B8B8B"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/managment_name"
            app:layout_constraintEnd_toStartOf="@+id/managment_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/managment_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="26dp"
            android:maxLines="3"
            android:text="هناك حقيقة مثبتة منذ زمن طويل وهي أن المحتوى المقروء لصفحة ما سيلهي القارئ عن التركيز على الشكل الخارجي للنص أو شكل توضع الفقرات"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/managment_task" />

        <ImageView
            android:id="@+id/managment_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_managnemt_menu"
            android:padding="15dp"
            app:layout_constraintEnd_toStartOf="@+id/managment_time"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/managment_time" />

        <Button
            android:id="@+id/managment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:background="@drawable/managment_shape"
            android:drawableEnd="@drawable/ic_managnemt_filter"
            android:padding="10dp"
            android:text="  غير منفذة"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/managment_date"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/managment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:text="تاريخ الاستحقاق"
            android:textColor="#CE8B2B"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/managment_btn"
            app:layout_constraintTop_toBottomOf="@+id/managment_desc" />

        <TextView
            android:id="@+id/managment_datevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_managment_time"
            android:text="05/01/2020  "
            android:textColor="#8B8B8B"
            app:layout_constraintBaseline_toBaselineOf="@+id/managment_date"
            app:layout_constraintEnd_toStartOf="@+id/managment_date"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>