<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="26dp"
    android:layout_gravity="top"
    android:layout_marginTop="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/mytask_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/01/2020"
        android:textSize="16sp"
        android:textColor="#535353"
        android:layout_gravity="end"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/mytask_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مهمة إدارية"
        android:layout_gravity="end"
        android:layout_marginEnd="26dp"
        android:textColor="#CE8B2B"
        android:textSize="12sp"/>

        <TextView
            android:id="@+id/mytask_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B8B8B"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="هناك حقيقة مثبتة منذ زمن طويل وهي أن المحتوى المقروء لصفحة ما سيلهي القارئ عن التركيز على الشكل الخارجي للنص أو شكل توضع الفقرات" />

         <Button
             android:id="@+id/mytask_excecute"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="تم التنفيذ  "
             android:background="@drawable/mytask_btn_shape"
             android:paddingEnd="30dp"
             android:paddingStart="30dp"
             android:paddingTop="10dp"
             android:layout_marginTop="10dp"
             android:layout_gravity="end"
             android:layout_marginEnd="26dp"
             android:drawableEnd="@drawable/ic_mytask_done"
             android:textColor="@android:color/white"
             android:paddingBottom="10dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>